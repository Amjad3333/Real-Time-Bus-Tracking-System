<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/toolbar_color"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Bus Name: "
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">

                </TextView>

                <EditText
                    android:id="@+id/update_name_txt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Bus no: "
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/update_number_txt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Driver: "
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/update_driver_txt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Bus Stop: "
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/update_stop_txt_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:text="Delete"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#D67B1D"
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"
                    app:backgroundTintMode="screen"
                    android:id="@+id/delete_usr_btn"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Update"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#D67B1D"
                    android:layout_margin="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"
                    app:backgroundTintMode="screen"
                    android:id="@+id/update_usr_btn"
                    android:padding="12dp"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>